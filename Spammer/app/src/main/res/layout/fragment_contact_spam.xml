<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp">
  
  <!-- Contact selector can be implemented here -->
  <Spinner
    android:id="@+id/spinner_contacts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:entries="@array/contacts" />
  
  <Button
    android:id="@+id/button_spam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Spam Contact" />
  
  <CheckBox
    android:id="@+id/checkbox_automated_response"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Send Automated Response" />

</LinearLayout>